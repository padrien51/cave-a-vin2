// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Définition du modèle pour une bouteille de vin
model Wine {
  id          Int      @id @default(autoincrement())
  name        String
  year        Int
  appellation String
  description String?  // Le '?' indique que ce champ est optionnel
  imageUrl    String?  // Le chemin vers l'image de l'étiquette
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}